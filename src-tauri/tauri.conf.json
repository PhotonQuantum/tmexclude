{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "tmexclude",
    "version": "0.2.0"
  },
  "tauri": {
    "allowlist": {
      "window": {
        "startDragging": true,
        "show": true
      },
      "dialog": {
        "open": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "open": "^https?://(twitter.com|github.com|gitlab.com)"
      }
    },
    "systemTray": {
      "iconPath": "icons/tray_icon.png",
      "iconAsTemplate": true
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "me.lightquantum.tmexclude",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "dialog": true,
      "endpoints": [
        "https://tmexclude-tauri-update.lightquantum.me/v1/{{target}}/{{arch}}/{{current_version}}"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNEQzREQTVEQzc3QkIyMTUKUldRVnNudkhYZHJFUFhiMkdHaGcwSGE0aUQzRHlsMzFMczNQWldmU3V2czNhVXNxbGdNRW9XRCsK"
    },
    "windows": [
      {
        "label": "main",
        "title": "Preferences",
        "url": "/main/stats",
        "fullscreen": false,
        "resizable": false,
        "visible": false,
        "height": 600,
        "width": 800,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      },
      {
        "label": "about",
        "title": "About",
        "url": "/about",
        "fullscreen": false,
        "center": true,
        "resizable": false,
        "visible": false,
        "height": 250,
        "width": 400,
        "hiddenTitle": true,
        "titleBarStyle": "Overlay"
      },
      {
        "label": "ack",
        "title": "Acknowledgements",
        "url": "/ack",
        "fullscreen": false,
        "center": true,
        "resizable": false,
        "visible": false,
        "height": 400,
        "width": 600
      }
    ],
    "macOSPrivateApi": true
  }
}
